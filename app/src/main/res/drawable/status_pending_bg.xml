<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid orange background for pending status -->
    <solid android:color="@color/status_pending" />

    <!-- Rounded corners for a modern badge appearance -->
    <corners android:radius="12dp" />

    <!-- Optional stroke for better definition -->
    <stroke
        android:width="1dp"
        android:color="@color/status_pending" />

</shape>